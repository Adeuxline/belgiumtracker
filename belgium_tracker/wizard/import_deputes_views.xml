<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <record id="view_import_depute_form" model="ir.ui.view">
      <field name="name">belgium_tracker.wizard_import_depute.form</field>
      <field name="model">belgium_tracker.wizard_import_depute</field>
      <field name="arch" type="xml">
        <form string="Import Députés">
          <p>This wizard (attemps to) import(s) all the deputies from the following web page:</p>
          <group>
            <field name="page_url"/>
          </group>
          <footer>
            <button type="object" name="action_scrape" string="Go for it, let's break the db!" class="btn-primary"/>
            <button string="Let me get out of here!" class="btn-secondary" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>
  </data>
</odoo>
